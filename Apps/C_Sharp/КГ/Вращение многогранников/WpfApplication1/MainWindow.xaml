        <CheckBox x:Name="checkBox1" Content="По оси Y" Grid.Column="1" HorizontalAlignment="Left" Margin="529,123,0,0" VerticalAlignment="Top" Click="checkBox1_Click"/>
        <CheckBox x:Name="checkBox2" Content="По оси Z" Grid.Column="1" HorizontalAlignment="Left" Margin="529,143,0,0" VerticalAlignment="Top" Click="checkBox2_Click"/>
        <TextBox x:Name="CtrlTxb" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="529,190,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="90" TextChanged="CtrlTxb_TextChanged"/>

    </Grid>
</Window>

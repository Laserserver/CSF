        <Canvas x:Name="canv" HorizontalAlignment="Left" Height="494" Margin="10,10,0,0" VerticalAlignment="Top" Width="674" Grid.ColumnSpan="2" Background="White" MouseUp="canv_MouseUp" MouseDown="canv_MouseDown" MouseMove="canv_MouseMove"/>
